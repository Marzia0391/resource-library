<div class="resource-library-article__video">
    {% set link = record.getValue('link')|replace({'://youtu.be/': '://www.youtube.com/embed/'}) %}
    <iframe width="480"
            height="320"
            src="{{ link }}"
            allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
            class="resource-library-article__embed"
    ></iframe>
</div>
